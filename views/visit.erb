<h2>Make an appointment</h2>
<p>You can make an appointment on this webpage</p>

<form action="/visit" method="POST" role="form">
  
    <div class="form-group">
      <label>Your name</label>
      <input id="bbb" name="username" type="text" class="form-control" placeholder="Your name" value="<%=@username%>">
    </div>

    <div class="form-group">
    <label>Your phone</label>
    <input name="phone" type="text" class="form-control ccc" placeholder="Your phone" value="<%=@phone%>">
    </div>

    <div class="form-group">
      <label>Your date</label>
      <input name="date" type="text" class="form-control ccc" placeholder="Your date" value="<%=@date%>">
    </div>

    <div class="form-group">
      <label>Your time</label>
      <input id="aaa" name="time" type="text" class="form-control" placeholder="Your time" value="<%=@time%>">
    </div>
    
    <div class="form-group">
      <label>Your fcker</label>
      <select name="fcker" class="form-control">
        <option value="none" selected>Choose your personal assfcker ...</option>
        <option value="Big Joe">Big Joe</option>
        <option value="Tricky Ricky">Tricky Ricky</option>
        <option value="Sissy Pososi">Sissy Pososi</option>
      </select>
    </div>
    
    <div class="form-group">
      <label>Your color of nation: </label>
      <select name="color" id="qqq">
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
      </select>
    </div>
      
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<script type="text/javascript">
$(function() {
  $('#qqq').simplecolorpicker();
})  
</script>